<%- include("partials/header"); %>
<div class="ui main segment container">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form action="/blogs/<%= blog._id %>?_method=put" method="post" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="blog[image]">Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="blog[body]">Blog</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <div class="field">
            <input type="submit" class="ui violet inverted big button" >
        </div>
    </form>
</div>

<%- include("partials/footer"); %>
