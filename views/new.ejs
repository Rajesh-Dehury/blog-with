<%- include("partials/header"); %>
<div class="ui main segment container">
    <div class="ui huge header">
        New Blog
    </div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label for="blog[image]">Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label for="blog[body]">Blog</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="blog post goes here..."></textarea>
        </div>
        <div class="field">
            <input type="submit" class="ui violet inverted big button" >
        </div>
    </form>
</div>

<%- include("partials/footer"); %>
